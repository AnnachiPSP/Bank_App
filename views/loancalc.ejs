  <body>
    <div class="container">
      <br><br>

      <h2>Active Loans</h2>
      <br><br>

      <% for(var i =0;i<results.length;i++){ %>
        <% if(results[i].CustomerID == current_cust_id && results[i].Loan_status == "unpaid"){ %>
          <p> Loan ID: <%= results[i].Loan_ID %> </p>
          <p> Branch ID where loan was sanctioned: <%= results[i].Branch_ID %> </p>
          <p> Loan Type: <%= results[i].Loan_Type %> </p>
          <p> Duration: <%= results[i].Duration %> Months </p>
          <p> Amount Taken: <%= results[i].Amount_taken %> </p>
          <p> Amount Paid: <%= results[i].Amount_paid %> </p>
          <p> Amount To Return: <%= results[i].Amount_to_return %> </p>
          <br>
        <% } %>
      <% } %>

      <br>
      <h2>Enter the Loan ID of whose amount to be paid must be calculated: </h2>
      <br>
      <p>Amount to be paid = (Amount taken * rate * Duration)/100</p>
      <br>

      <form action="/loanpay" method="post">
        <div class="mb-2">
          <label class="form-label">Loan ID</label>
          <input type="text" class="form-control" name="loanid">
        </div>
        <br><br>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <br><br>

      <%- if(tempsmt){ -%>
        <p></p>
      <%- } -%>

